{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"],
        "resolveJsonModule": true
    },
    "include": ["src", "jest.setup.ts"],
    "exclude": ["tests", "**/*.test.*", "**/*.spec.*"]
}
